<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="defaultTextColor">#e5e5e5</item>
        <item name="lowAttentionTextColor">#d3d3d3</item>
        <item name="lowestAttentionTextColor">#baffffff</item>
        <item name="inactiveTextColor">#7a7a7a</item>

        <item name="menuIconColor">@color/white</item>
        <item name="iconColor">@color/negligibly_dimmed_white</item>
        <item name="blockColor">#101010</item>
        <item name="accentColor">#3C415C</item>

<!--        cursor color in edit text-->
        <item name="colorAccent">?attr/lowestAttentionTextColor</item>

        <item name="viewSelectionColor">#2a2a2a</item>

        <item name="android:textColor">?attr/defaultTextColor</item>

        <item name="android:fontFamily">@font/opensans</item>

        <item name="profileBackground">@drawable/profile_pattern_dark</item>
    </style>

</resources>