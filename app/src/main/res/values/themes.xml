<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="defaultTextColor">#1a1a1a</item>
        <item name="lowAttentionTextColor">#2c2c2c</item>
        <item name="lowestAttentionTextColor">#454545</item>
        <item name="inactiveTextColor">#858585</item>

        <item name="menuIconColor">@color/black</item>
        <item name="iconColor">#202020</item>
        <item name="blockColor">#efefef</item>
        <item name="accentColor">#C3BEA3</item>

<!--        cursor color in edit text-->
        <item name="colorAccent">?attr/lowestAttentionTextColor</item>

        <item name="viewSelectionColor">#D5D5D5</item>

        <item name="android:textColor">?attr/defaultTextColor</item>

        <item name="android:fontFamily">@font/opensans</item>

        <item name="profileBackground">@drawable/profile_pattern_light</item>
    </style>
</resources>